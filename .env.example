# Configuration de l'application
NODE_ENV=development
PORT=3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Authentication
JWT_SECRET=your-jwt-secret
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Database (si utilisation directe)
DATABASE_URL=postgresql://user:password@localhost:5432/lilou_logistique

# Email Service (optionnel)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@lilou-logistique.com

# Optional: Google Maps (for future integration)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Optional: Webhook Configuration
WEBHOOK_URL_ALERTS=your_webhook_url_for_alerts
WEBHOOK_SECRET=your_webhook_secret
