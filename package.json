    "@capacitor/keyboard": "^5.0.9",
    "@capacitor/status-bar": "^5.0.8",
    "@tanstack/react-query": "^4.40.0",
    "axios": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "web-vitals": "^5.0.3",
    "workbox-window": "^7.3.0",
    "zustand": "^4.5.7"
